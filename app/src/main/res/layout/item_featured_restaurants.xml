<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_20sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@null">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:maxHeight="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/featured" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_rates"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rates" />

                <ImageView
                    android:id="@+id/img_favorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_loved" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view"
            android:layout_marginTop="11dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="11dp">

            <TextView
                android:id="@+id/lbl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/sofia_pro_semi_bold_az"
                android:text="McDonaldâ€™s"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_de1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_name"
            android:orientation="horizontal"
            android:paddingHorizontal="11dp">




                <TextView
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_delivery"
                    android:id="@+id/lbl_name1"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/sofia_pro_regular_az"
                    android:text="free delivery"
                    android:textColor="@color/hint_color"
                    android:textSize="12dp" />



                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/card_view"
                    android:layout_marginStart="8dp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/ic_clock"
                    android:id="@+id/lbl_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/sofia_pro_regular_az"
                    android:text="10-15 mins"
                    android:textColor="@color/hint_color"
                    android:textSize="12dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_de2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_de1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:paddingHorizontal="11dp">


            <TextView
                android:id="@+id/lbl_food_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="11dp"
                android:background="@drawable/food_type_shape_item"
                android:fontFamily="@font/sofia_pro_regular_az"
                android:padding="3dp"
                android:text="Burger"
                android:textColor="@color/hint_color"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/lbl_food_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:background="@drawable/food_type_shape_item"
                android:fontFamily="@font/sofia_pro_regular_az"
                android:padding="3dp"
                android:text="Chicken"
                android:textColor="@color/hint_color"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/lbl_food_type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:background="@drawable/food_type_shape_item"
                android:fontFamily="@font/sofia_pro_regular_az"
                android:padding="3dp"
                android:text="Fast Food"
                android:textColor="@color/hint_color"
                android:textSize="12dp" />


        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>