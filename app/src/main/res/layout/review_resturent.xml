<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="65dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/buttom_shape"
        android:fontFamily="@font/sofia_pro_bold_az"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edt_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_submit"
        android:layout_marginHorizontal="27dp"
        android:layout_marginBottom="170dp"
        android:hint="Write" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edt_write"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/lbl_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ratingBar"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Good"
        android:textColor="@color/orange"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/how_was"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lbl_review"
        android:layout_marginHorizontal="26dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/sofia_pro_light_az"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="How was your last order from Pizza Hut ?"
        android:textColor="@color/black"
        android:textSize="31dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/how_was"
        android:src="@drawable/review" />



</RelativeLayout>